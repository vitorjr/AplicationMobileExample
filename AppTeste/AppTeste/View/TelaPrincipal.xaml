<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTeste.View.TelaPrincipal">
    
        <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="Tarefa" Placeholder="Digite a nova Tarefa"></Entry>
            <Button x:Name="BtnAdd" Text="Salvar"></Button>
        </StackLayout>

        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="Nome da Tarefa"></Label>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    
</ContentPage>